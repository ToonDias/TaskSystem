<%- include('../../header.ejs') %>
<%- include('../../navbar.ejs') %>
<div class="container">
    <br>
    <a href="/admin/funcionarios/create" class="btn btn-success">Novo funcionario</a>
    <br>
    <br>
    <table class="table  table-stripet table-bordered text-center">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Sexo</th>
                <th>Cargo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% funcionarios.forEach( funcionario =>{ %>
                <td><%= funcionario.id %></td>
                <td><%= funcionario.nome %></td>
                <td><%= funcionario.cpf %></td>
                <td><%= funcionario.sexo %></td>
                <td><%= funcionario.cargo %></td>
                <td>
                    <a href="/admin/funcionarios/editar/<%= funcionario.id %>" class="btn btn-warning">Editar</a>
                    <form action="/admin/funcionarios/delete" method="POST" style="display: inline-block">
                        <input type="hidden" name="id" value="<%= funcionario.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            <% }) %>
        </tbody>
    </table>
    <br>
</div>
<%- include('../../footer.ejs') %>